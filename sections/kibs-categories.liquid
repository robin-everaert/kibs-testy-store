<section class="kibs-categories">
    <div class="container">
        <h1>Explore Our Categories</h1>
        <div class="categories-grid">
            {% for i in (1..4) %}
                {% assign key = "collection_" | append: i %}
                {% assign collection_handle = section.settings[key] %}
                {% comment %} {{ collection_handle | escape }}  {% endcomment %}
                {% assign collection = collections[collection_handle] %}
                {% if collection %}
                    <div class="category-card">
                        <a href="{{ collection.url }}">
                            {% if collection.image %}
                                <img src="{{ collection.image | img_url: '300x300' }}" alt="{{ collection.title }}">
                            {% else %}
                                <img src="https://via.placeholder.com/300x300?text=No+Image" alt="No image available">
                            {% endif %}
                            <h3>{{ collection.title | capitalize }}</h3>
                        </a>
                        {% comment %} <p>{{ collection.description | truncate: 100 }}</p>
                        <a class="btn" href="{{ collection.url }}">View Collection</a> {% endcomment %}
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>
</section>

<style>
.kibs-categories {
    margin: 50px 0;
}
.kibs-categories .categories-grid {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 30px;
}
.kibs-categories .category-card  {
    position: relative;
    
}
.kibs-categories img {
    transition: all .3s;
}
.kibs-categories .category-card:hover  img {
  transform: scale(1.05); 
  transition: all .3s;
}
.kibs-categories .category-card h3 {
    font-size: 2rem;
    width: 200px;
    text-align: center;
    position: absolute;
    bottom: 0em;
    left: calc(50% - 100px);
    background: var(--kibs-color-white);
    border-radius: 5px;
    padding: 5px 0;
    font-weight: bold;
}

@media(min-width: 768px) {
    .kibs-categories .categories-grid {
            flex-direction: row;
            
    }
    .kibs-categories .category-card h3 {
        font-size: 3rem;
    }

}
</style>




