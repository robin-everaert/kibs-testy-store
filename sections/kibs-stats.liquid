<section class="kibs-stats">
    <div class="container">
        <div class="stars-container page-width">
            <span>{{ 'icon-star.svg' | inline_asset_content }}</span>
            <span>{{ 'icon-star.svg' | inline_asset_content }}</span>
            <span>{{ 'icon-star.svg' | inline_asset_content }}</span>
            <span>{{ 'icon-star.svg' | inline_asset_content }}</span>
            <span>{{ 'icon-star.svg' | inline_asset_content }}</span>
        </div>
        <div class="stats-grid">
            
            <div class="stat">

                <h3>10,000+</h3>
                <p>Satisfied Customers</p>
            </div>
            <div class="stat">
                <h3>100%</h3>
                <p>Guaranteed Quality</p>
            </div>
            <div class="stat">
                <h3>50+</h3>
                <p>Exclusive Products</p>
            </div>
        </div>
    </div>
</section>

<style>
    .kibs-stats {
    /* background-color: var(--kibs-color-back-2);  */
    background: #F3EEE7;
    color: var(--kibs-color-success); /* Texte blanc */
    text-align: center;
    padding: 40px 20px;
    margin-top: 50px;
}

.stats-grid {
    max-width: 1400px;
    display: flex;
    justify-content: space-around;
    flex-wrap: wrap;
    gap: 40px; 
    padding: 0 !important;
}
.kibs-stats .container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.kibs-stats .stars-container {
    display: flex;
    justify-content: center;
}
.kibs-stats .stars-container span {
    margin-left: 10px;
    margin-right: 10px;
    
}

.kibs-stats .stat {
   
    margin-top: 2em;
    /* width: 300px;
    height: 300px; */
    /* background: #ccc; */
    /* border-radius: 200px; */
    display: flex;
    flex-direction: column;
    /* justify-content: start; */
    align-items: space-around;
}

.kibs-stats .stat h3 {
    font-size: 6rem;
    color: var(--kibs-color-success);
    font-weight: bold;
    margin: 0;
}

.kibs-stats .stat p {
    font-size: 2rem;
    margin: 0;
    color: var(--kibs-color-txt);
    /* color: rgba(255, 255, 255, 0.8);  */
}


@media (max-width: 768px) {
    .kibs-stats .stats-grid {
        flex-direction: column; /* Colonne sur mobile */
        align-items: center;
    }

    .kibs-stats .stat {
        width: 100%;
        margin-bottom: 20px;
    }
}

</style>

{% schema %}
{
  "name": "Kibs Stats",
  "settings": []
}
{% endschema %}
